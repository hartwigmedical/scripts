#!/usr/bin/env bash

source message_functions || exit 1
source locate_files || exit 1
source database_functions || exit 1

patient=$1 && shift
actin_credentials=$1 && shift
actin_database_name=$1 && shift

patient_json="$(locate_actin_cohort_clinical_directory)/${patient}.clinical.json"
actin_jar="$(locate_cohort_actin_molecularLoaderAPP)"

info "Patient json path location${patient_json}"
info "Actin jar location ${actin_jar}"

if [[ -z "${patient_json}" || -z "${actin_jar}" ]]; then
    error "Patient or jar Parameters missing. Exiting."
fi

if [[ -z "${actin_credentials}" || -z "${actin_database_name}" ]]; then
    error "SQL Parameters missing. Exiting."
fi
info "Patient credentials ${actin_credentials}"
info "Actin DB name ${actin_database_name}"

db_user=$(extract_database  _user "${actin_credentials}")
db_pass=$(extract_database_password "${actin_credentials}")
db_url=$(construct_database_url "${actin_credentials}" "${actin_database_name}")

info "Loading $(basename ${patient_json}) into ACTIN database '${actin_database_name}'"

java -cp ${actin_jar} com.hartwig.actin.database.molecular.MolecularLoaderApplicationKt \
    -patient_json ${patient_json} \
    -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url} \
    "$@"
