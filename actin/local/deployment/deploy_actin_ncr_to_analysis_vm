#!/usr/bin/env bash

source message_functions || exit 1

ncr_jar=$(find -L "${HOME}/hmf/repos/actin-personalization/ncr/target" -type f -name "*-jar-with-dependencies.jar")

if [[ ! -f "${ncr_jar}" ]]; then
    error "Could not locate NCR jar!"
fi

vm="actin-analysis-vm"
info "Copying ${ncr_jar} to ${vm}"
gcloud compute scp ${ncr_jar} ${vm}:/data/tools/ncr/ncr.jar