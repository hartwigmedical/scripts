#!/usr/bin/env bash

source locate_files || exit 1
source message_functions || exit 1
source actin_config || exit 1
source shared_data_functions || exit 1

patient=$1 && shift
namespace=$1 && shift

if [[ -z "${patient}" ]]; then
    error "Parameter patient missing. Exiting.";
fi

if [[ -z "${namespace}" ]]; then
    error "Missing namespace [$(actin_emc_namespaces)]"
fi

gcp_project=$(production_actin_emc_project)
shared_external_orange_data_uri="$(locate_next_orange_shared_data_external_uri_gcp ${gcp_project} ${patient} ${namespace})"

orange_no_germline_json="$(locate_actin_orange_no_germline_json_gcp ${gcp_project} ${patient} ${namespace})"
orange_no_germline_pdf="$(locate_actin_orange_no_germline_pdf_gcp ${gcp_project} ${patient} ${namespace})"

info "Copying ORANGE (no germline) data and report for ${patient} to ${shared_external_orange_data_uri}"
gsutil cp "${orange_no_germline_json}" "${shared_external_orange_data_uri}/"
gsutil cp "${orange_no_germline_pdf}" "${shared_external_orange_data_uri}/"

write_shared_data_latest_path_manifest "${shared_external_orange_data_uri}"