#!/usr/bin/env bash

source message_functions || exit 1

commit_message=$1 && shift
if [[ -z ${commit_message} ]]; then
    commit_message="Updated ACTIN resource files"
fi

current_path=$(pwd)

info "Committing and pushing changes in actin crunch resources"

cd "$HOME/hmf/repos/crunch-resources-private"

git pull
git commit -m "${commit_message}" actin
git push

cd "${current_path}"
