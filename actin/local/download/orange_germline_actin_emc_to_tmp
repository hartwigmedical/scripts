#!/usr/bin/env bash

source message_functions || exit 1
source actin_config || exit 1

patient=$1 && shift
namespace=$1 && shift

if [[ -z "${patient}" ]]; then
    error "Missing patient parameter. Exiting."
fi

if [[ -z "${namespace}" ]]; then
    namespace="tm-progene-study"
    info "Missing namespace, assuming '${namespace}' from [$(actin_emc_namespaces)]"
fi

gcp_project=$(production_actin_emc_project)
do_download_orange_germline_actin_to_tmp ${patient} ${gcp_project} ${namespace}
