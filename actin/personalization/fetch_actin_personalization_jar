#!/usr/bin/env bash

source message_functions || exit 1
source locate_files || exit 1

version=$1 && shift

if [[ -z "${version}" ]]; then
    error "Missing argument for version"
fi

destination_jar=$(locate_actin_personalization_jar)

info "Fetching personalization jar version ${version} to ${destination_jar}"
do_fetch_actin_tool_from_registry personalization ${version} ${destination_jar}

info "Copying personalization sql files from jar to designated place on vm"
unzip -p ${destination_jar} generate_ncr_database.sql > "$(locate_actin_ncr_database_sql_script)"
unzip -p ${destination_jar} generate_personalization_database.sql > "$(locate_actin_personalization_database_sql_script)"
unzip -p ${destination_jar} generate_personalization_views.sql > "$(locate_actin_personalization_database_views_sql_script)"

info "Done!"