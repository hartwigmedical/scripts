#!/usr/bin/env bash

source locate_files || exit 1
source io_functions || exit 1

output_dir="/data/output/pilot_output_ckb_trials_only"
create_or_cleanup_dir ${output_dir}

ckb_dir="$(locate_ckb_flex_data_latest_dir)"
ckb_filter_tsv="$(locate_ckb_filter_pilot_tsv)"
ckb_drug_class_curation_tsv="$(locate_ckb_drug_class_curation_tsv)"
missing_doids_mapping_tsv="$(locate_private_missing_doids_mapping_tsv)"

do_run_serve_pilot \
    -missing_doids_mapping_tsv ${missing_doids_mapping_tsv} \
    -use_ckb_trials -ckb_dir ${ckb_dir} -ckb_filter_tsv ${ckb_filter_tsv} -ckb_drug_curation_tsv ${ckb_drug_class_curation_tsv} \
    -output_dir ${output_dir} \
    "$@"
