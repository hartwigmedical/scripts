#!/usr/bin/env bash

source message_functions || exit 1
source locate_files || exit 1

run_dir=$1 && shift

if [[ -z "${run_dir}" ]]; then
    error "No run dir provided. Exiting"
fi

cuppa_jar="$(locate_prod_cuppa_dna)"
cuppa_dir="${run_dir}/cuppa"
cuppa_mode="DNA;RNA"

do_run_cuppa ${run_dir} ${cuppa_jar} ${cuppa_dir} ${cuppa_mode} "$@"
