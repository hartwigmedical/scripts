#!/usr/bin/env bash

source message_functions || exit 1
source locate_files || exit 1

run_dir=$1 && shift

if [[ -z "${run_dir}" ]]; then
    error "No run dir provided. Exiting"
fi

ref_dir="$(locate_cuppa_ref_dir_dna_rna)"
cuppa_jar="$(locate_pilot_cuppa)"
cuppa_dir="${run_dir}/cuppa_dna_rna_pilot"

do_run_cuppa_dna_rna_pilot ${run_dir} ${ref_dir} ${cuppa_jar} ${cuppa_dir} "$@"