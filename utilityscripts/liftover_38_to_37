#!/usr/bin/env bash

tmp_38_hotspots=$1
working_dir=$2
target_37_hotspots=$3

info "Running Picard LiftOver on ${tmp_38_hotspots}"
java -jar /data/tools/picard-tools/2.18.27/picard.jar LiftoverVcf \
    I=${tmp_38_hotspots} \
    O=${target_37_hotspots} \
    CHAIN=/data/refgenomes/liftover/hg38ToHg19.over.chain \
    REJECT=${working_dir}/rejected_variants.vcf \
    R=/data/refgenomes/Homo_sapiens.GRCh37.GATK.illumina/Homo_sapiens.GRCh37.GATK.illumina.fasta
